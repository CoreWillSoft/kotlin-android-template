<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/login_fragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/login_fragment"
        android:name="io.template.app.authorization.LoginFragment"
        android:label="@string/lgoin_title"
        tools:layout="@layout/login_layout" >
        <action
            app:destination="@id/registration_fragment"
            android:id="@+id/to_registration" />
    </fragment>

    <fragment
        android:id="@+id/registration_fragment"
        android:name="io.template.app.authorization.RegistrationFragment"
        android:label="@string/registration_title"
        tools:layout="@layout/registration_layout" />


</navigation>
